<html>
<head>
    <title>@ViewBag.Subject</title>    

    <style type="text/css" media="screen">
        *, *:after, *:before {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        .email-template, .email-template td {
            margin: 0;
            padding: 0;
        }

        .email-template {
            padding: 20px;
        }

            .email-template > table {
                width: 800px;
            }

            .email-template table tr td {
                border: none;
            }

            .email-template table tbody tr:hover, .email-templatetable tbody tr.active {
                background: none;
            }

            .email-template h2 {
                color: #626366;
            }
    </style>
</head>
<body class="email-template">
    <table width="800" border="0" cellpadding="0" cellspacing="0" style="margin: 0 auto;">
        <tr>
            <td style="padding: 0; margin: 0;">
                <table width="100%" border="0" cellpadding="0" cellspacing="0">
                    <tbody>
                        <tr>
                            <td>
                                <div style="margin-top:20px;">
                                    Please reset your password by clicking here: <a target="_blank" href="@ViewBag.CallbackUrl">link</a>
                                </div>

                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div style="margin-top:40px;">
                                    <p>Thanks</p>
                                    <p>
                                    </p>
                                    <p>
                                       
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>
